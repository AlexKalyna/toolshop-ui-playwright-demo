{
  "name": "toolshop-ui-e2e-playwright-demo",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test --grep-invert @buggy",
    "test:buggy": "npx playwright test --grep @buggy",
    "test:coverage": "npx playwright test --reporter=html --reporter=junit --reporter=lcov",
    "report": "npx playwright show-report",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "audit": "npm audit --audit-level=high",
    "test:screenshot": "npx playwright test --project=screenshot-tests",
    "update:snapshots": "npx playwright test --project=screenshot-tests --update-snapshots",
    "sonar:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000",
    "sonar:cloud": "sonar-scanner",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx,json,md,yml,yaml}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "keywords": [],
  "author": "Oleksandr Kalyna",
  "email": "oleksandr.kalyna.qa@gmail.com",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "1.54.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0"
  },
  "overrides": {
    "eslint": "^9.20.0"
  }
}
